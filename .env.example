# Copy this file to `.env` and fill in your values.
# This file is for local development only. Do NOT commit your .env.

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/shop
SPRING_DATASOURCE_USERNAME=shop-user
SPRING_DATASOURCE_PASSWORD=root

# JWT
APPLICATION_SECURITY_JWT_SECRET_KEY=change-me-to-a-long-random-secret
APPLICATION_SECURITY_JWT_EXPIRATION=86400000

# Mail
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your-email@gmail.com
SPRING_MAIL_PASSWORD=your-app-password
SPRING_MAIL_PROPERTIES_MAIL_SMTP_AUTH=true
SPRING_MAIL_PROPERTIES_MAIL_SMTP_STARTTLS_ENABLE=true

# Frontend base URL (for password reset links)
APP_FRONTEND_URL=http://localhost:3000

